{
  "name": "@houseforge/server",
  "version": "1.0.0",
  "description": "HouseForge backend services - Vault, Trait Engine, Fusion Orchestrator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "gen:metadata": "tsx src/scripts/generateGenesis.ts",
    "demo": "tsx src/scripts/demo.ts",
    "export-vault": "tsx src/scripts/exportVaultPack.ts",
    "import-vault": "tsx src/scripts/importVaultPack.ts",
    "render:recipes": "tsx src/scripts/generateRenderRecipes.ts",
    "render:jobs": "tsx src/scripts/buildRenderJobs.ts",
    "render:batch": "tsx src/scripts/runRenderBatch.ts",
    "render:all": "tsx src/scripts/runRenderBatch.ts -- --all",
    "render:update-metadata": "tsx src/scripts/updateMetadataImages.ts",
    "check-wallet": "tsx src/scripts/checkWallet.ts"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "json-stable-stringify": "^1.1.1",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/json-stable-stringify": "^1.0.36",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
